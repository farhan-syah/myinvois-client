{
  "name": "myinvois-client",
  "version": "1.2.4",
  "description": "A TypeScript client library (SDK) for seamless integration with the Malaysian MyInvois REST API, enabling developers to build custom e-invoicing solutions.",
  "main": "dist/cjs/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm --sourcemap && bun build ./src/index.ts --outdir ./dist/cjs --target node --format cjs --sourcemap && tsc --emitDeclarationOnly --outDir ./dist",
    "prepare": "bunx husky && bun run build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "check-format": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/farhan-syah/myinvois-client.git"
  },
  "keywords": [
    "myinvos",
    "api",
    "client",
    "typescript",
    "sdk"
  ],
  "author": "Farhan Syah",
  "license": "LGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/farhan-syah/myinvos-client/issues"
  },
  "homepage": "https://github.com/farhan-syah/myinvos-client#readme",
  "devDependencies": {
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "files": [
    "dist",
    "dist/cjs/package.json",
    "LICENSE",
    "README.md",
    "INTENT.md"
  ],
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write --cache --ignore-unknown"
    ],
    "*.{js,jsx,json,mjs,cjs,css,scss,less,html,md,yaml,yml}": [
      "prettier --write --cache --ignore-unknown"
    ]
  }
}
